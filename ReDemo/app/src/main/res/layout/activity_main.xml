    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lpp.demo.redemo.MainActivity">

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/activity_view_ptrfresh_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.lpp.demo.redemo.widgets.loadmore.LoadMoreListViewContainer
            android:id="@+id/activity_view_ptrloadmore"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
